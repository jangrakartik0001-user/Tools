            }
            
            nav ul {
                flex-direction: column;
                margin-top: 20px;
            }
            
            nav ul li {
                margin: 10px 0;
            }
            
            .hero h1 {
                font-size: 1.8rem;
            }
            
            .section-title {
                font-size: 1.6rem;
            }
        }
    </style>
